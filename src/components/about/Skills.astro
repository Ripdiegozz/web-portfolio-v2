---
import techStack from "../../constants/tech-stack";
---

<section class='w-full py-8 mt-4 skills'>
  <div
    class='container max-w-5xl mx-auto items-center justify-center text-center md:px-6 lg:grid-cols-2 xl:max-w-6xl'
  >
    <div>
      <div class='space-y-3'>
        <h2 class='text-2xl font-bold'>
          My Development <span class='text-[#FFD700]'>Stack</span>
        </h2>
        <p
          class='mx-auto font-semibold max-w-[700px] text-white md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed'
        >
        </p>
      </div>
      <div class='flex flex-wrap justify-center gap-6 w-full mx-auto md:py-6'>
        {
          techStack.map((tech) => (
            <div
              class='p-0 transition-transform hover:scale-105 tooltip'
              data-tip={tech.name}
            >
              <img
                src={`https://skillicons.dev/icons?i=${tech.key}`}
                alt={tech.name}
                class='h-10 w-10 md:h-12 md:w-12'
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  // @ts-expect-error - ScrollReveal is defined in the global scope
  ScrollReveal().reveal(".skills", {
    delay: 150,
  });
</script>
