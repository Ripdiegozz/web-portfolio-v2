---
import AnimatedText from "../common/animated-text";

const title =
  "A full-stack developer focused on building user-centric apps, software, and websites.";

const animation = {
  hidden: {
    opacity: 0,
    y: 20,
  },
  visible: {
    opacity: 1,
    y: 0,
    transition: {
      duration: 0.05,
    },
  },
};
---

<section
  class='flex flex-col gap-2 items-center justify-center w-full mx-auto py-16 px-4'
>
  <div class='flex flex-col gap-4 items-center justify-center w-full'>
    <AnimatedText
      once
      text={title}
      el='h1'
      className='text-[36px] max-w-[600px] font-[600] text-left'
      animation={animation}
      client:load
    />

    <p class='text-[16px] text-left text-gray-600 max-w-[600px] font-[400]'>
      I'm a full-stack developer with a passion for building user-centric
      applications, software, and websites. I specialize in creating
      high-performance, scalable, and secure applications that provide a
      seamless user experience. I'm always looking for new opportunities to
      collaborate on exciting projects and help bring ideas to life.
    </p>
  </div>

  <div class='flex gap-4 mt-4 items-center justify-start w-full md:w-[600px]'>
    <a href='/projects' class='btn btn-md btn-outline bg-slate-100'>
      View Projects
    </a>
    <a
      href='/contact'
      class='btn btn-md btn-outline bg-black hover:bg-gray-700 text-white'
    >
      Let's Talk
    </a>
  </div>
</section>
